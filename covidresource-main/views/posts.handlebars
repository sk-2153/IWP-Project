<div class="div1">
    <h2>Resources Available</h2>
    <h3>Here you can see the Resources Offered by Others</h3>
   <table>
    <thead class="header">
        <th>Hospital</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Resources</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Order</th>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            {{#each post_hospital}}
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            {{/each}}
            <td>{{this.resources}}</td>
            <td>{{this.description}}</td>
            <td>{{this.quantity}}</td>
            <td>
                <form action="/order-post" method="POST">
                    <input type="hidden" name="postId" value={{this._id}}>
                    <input type="hidden" name="total" value="{{this.quantity}}">
                    <input type="hidden" name="resource" value="{{this.resources}}">
                    <input type="hidden" name="description" value="{{this.description}}">
                    <input class="quan" type="number" name="quantity" max={{this.quantity}}>
                    <button class="btn1" type="submit">Order</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
